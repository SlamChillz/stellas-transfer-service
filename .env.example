NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Version (optional; Docker build can pass APP_VERSION)
APP_VERSION=1.0.0
# Run migrations when app starts (set to true in some deployments)
RUN_MIGRATIONS_ON_START=false
# Run seed when app starts (e.g. Docker: two demo accounts with 100000 each)
RUN_SEED_ON_START=false

# Test-only endpoints (create account, top-up). Enabled automatically when NODE_ENV is not production.
# ALLOW_TEST_ENDPOINTS=false

# Database: set DATABASE_URL or use separate vars
# DATABASE_URL=postgres://user:password@localhost:5432/stellas_transfer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stellas_transfer
DB_USER=postgres
DB_PASSWORD=

# Docker Compose: optional Adminer port when using --profile tools
ADMINER_PORT=8080
