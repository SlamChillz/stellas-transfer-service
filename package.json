{
  "name": "stellas-transfer-service",
  "version": "1.0.0",
  "description": "Internal Transfer Service - Business Banking Ledger & Transfer Engine",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "node scripts/ensure-docker-test-up.js && node scripts/ensure-test-db.js && jest --config jest.config.js",
    "test:coverage": "node scripts/ensure-docker-test-up.js && node scripts/ensure-test-db.js && jest --config jest.config.js --coverage",
    "test:unit": "node scripts/ensure-docker-test-up.js && jest --config jest.config.js --testPathPattern=unit",
    "test:integration": "node scripts/ensure-docker-test-up.js && node scripts/ensure-test-db.js && jest --config jest.config.js --testPathPattern=integration",
    "test:watch": "node scripts/ensure-docker-test-up.js && node scripts/ensure-test-db.js && jest --config jest.config.js --watch",
    "test:concurrency": "node scripts/ensure-docker-test-up.js && node scripts/ensure-test-db.js && ts-node tests/concurrency/run-concurrent-transfers.ts",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f app",
    "docker:up:tools": "docker compose --profile tools up -d",
    "docker:build:run": "docker compose up -d --build"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.21.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.3.0",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
